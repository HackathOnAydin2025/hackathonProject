<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav"
    app:startDestination="@id/progressFragment2">
    <fragment
        android:id="@+id/progressFragment2"
        android:name="com.example.hackathon.ProgressFragment"
        android:label="ProgressFragment" >
        <action
            android:id="@+id/progressToTaskList"
            app:destination="@id/taskListFragment" />
    </fragment>
    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.example.hackathon.TaskListFragment"
        android:label="fragment_task_list">
        <argument
            android:name="selected_date_string"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>